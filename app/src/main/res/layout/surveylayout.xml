<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/titletext"
        android:text="SURVEY"
        android:textSize="25dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_below="@+id/titletext"
        android:id="@+id/linearlayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ranked ___ or below (CS undergraduate program):"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:id="@+id/rankmenu"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With a total admission rate of ___ or lower:"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:id="@+id/totratemenu"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With size of ___ students (per year) or smaller:"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:id="@+id/enrollmenu"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="539dp"
        android:background="@color/green"
        android:textSize="17dp"
        android:id="@+id/button1"
        android:text="submit" />

</RelativeLayout>
