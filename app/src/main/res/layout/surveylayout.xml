<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/titletext"
        android:text="SURVEY"
        android:textSize="25dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_below="@+id/titletext"
        android:id="@+id/linearlayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ranked ___ or below (CS undergraduate program):"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:id="@+id/rankmenu"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With a total admission rate of ___ or lower:"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:id="@+id/totratemenu"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With size of ___ students (per year) or smaller:"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:id="@+id/enrollmenu"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With out of state tuition being $___ (per year) or less:"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:id="@+id/outpricemenu"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose one (SAT or ACT) of the following. Leave the other blank."
            android:textSize="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My SAT scores are:"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:hint="reading"
                android:textSize="13dp"
                android:textAlignment="center"
                android:id="@+id/satreadedit"
                />
            <EditText
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:hint="math"
                android:textSize="13dp"
                android:textAlignment="center"
                android:layout_marginLeft="60dp"
                android:id="@+id/satmathedit"
                />
            <EditText
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:hint="writing"
                android:textSize="13dp"
                android:textAlignment="center"
                android:layout_marginLeft="60dp"
                android:id="@+id/satwriteedit"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My ACT score is:"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:hint="composite"
            android:textSize="13dp"
            android:textAlignment="center"
            android:id="@+id/actedit"
            />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="539dp"
        android:background="@color/green"
        android:textSize="17dp"
        android:id="@+id/button1"
        android:text="submit" />

</RelativeLayout>
